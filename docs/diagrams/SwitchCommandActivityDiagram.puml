@startuml
!include InternHunterStyle.puml

start
:user enters switch command;
:InternHunter parse the user input;
if () then ([switch command, with item type])
    if () then ([Command is "switch com"])
        if () then ([current tab is at company])
            :Returns same
            tab message;
        else ([current tab is not at company])
            :Switch the current tab
            to company screen;
            :Returns success message;
        endif
    elseif () then ([Command is "switch app"])
        if () then ([current tab is at application])
            :Returns same
            tab message;
        else ([current tab is not at application])
            :Switch the current tab
            to application screen;
            :Returns success message;
        endif
    elseif () then ([Command is "switch me"])
        if () then ([current tab is at profile])
            :Returns same
            tab message;
        else ([current tab is not at profile])
            :Switch the current tab
            to profile screen;
            :Returns success message;
        endif
    else ([Command is neither of the three commands])
        :Returns failure message
        (Invalid Command message for switch);
    endif
else ([switch command, without any input behind])
:Returns failure message
(Invalid Command message for switch);
endif
:InternHunter app prints message to user;

stop
@enduml
